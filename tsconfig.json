{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es5",
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true,
    "allowJs": false,
    "strict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "type-glsl.d.ts",
    "custom.d.ts"
  ],
  "exclude": ["node_modules", "lib"]
}
